<div class="row">
  <div class="container">
	<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
      <ol class="carousel-indicators">
        {% if section.settings.image_1 %}
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        {% endif %}
        {% if section.settings.image_2 %}
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        {% endif %}
        {% if section.settings.image_3 %}
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        {% endif %}
        {% if section.settings.image_4 %}
        <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
        {% endif %}
        {% if section.settings.image_5 %}
        <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
        {% endif %}
      </ol>
      <div class="carousel-inner" {% unless section.settings.full_size %}style="max-height:450px;"{% endunless %}>
        {% if section.settings.image_1 %}
          <div class="carousel-item active">
            <img class="d-block w-100" src="{{ section.settings.image_1 | img_url: 'x450', crop: 'center', format: 'pjpg'  }}" alt="Slide 1">
          </div>
        {% endif %}
        {% if section.settings.image_2 %}
          <div class="carousel-item">
            <img class="d-block w-100 lazyload" data-src="{{ section.settings.image_2 | img_url: 'x450', crop: 'center', format: 'pjpg'  }}" alt="Slide 2">
          </div>
        {% endif %}
        {% if section.settings.image_3 %}
          <div class="carousel-item">
            <img class="d-block w-100 lazyload" data-src="{{ section.settings.image_3 | img_url: 'x450', crop: 'center', format: 'pjpg'  }}" alt="Slide 3">
          </div>
        {% endif %}
        {% if section.settings.image_4 %}
          <div class="carousel-item">
            <img class="d-block w-100 lazyload" data-src="{{ section.settings.image_4 | img_url: 'x450', crop: 'center', format: 'pjpg'  }}" alt="Slide 4">
          </div>
        {% endif %}
        {% if section.settings.image_5 %}
          <div class="carousel-item">
            <img class="d-block w-100 lazyload" data-src="{{ section.settings.image_5 | img_url: 'x450', crop: 'center', format: 'pjpg'  }}" alt="Slide 5">
          </div>
        {% endif %}
      </div>
      <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Slideshow",
    "settings": [
      {
        "type": "checkbox",
        "id": "full_size",
        "label": "Full size",
        "default": false
      },
      {
        "type": "image_picker",
        "id": "image_1",
        "label": "Image 1"
      },
      {
        "type": "image_picker",
        "id": "image_2",
        "label": "Image 2"
      },
      {
        "type": "image_picker",
        "id": "image_3",
        "label": "Image 3"
      },
      {
        "type": "image_picker",
        "id": "image_4",
        "label": "Image 4"
      },
      {
        "type": "image_picker",
        "id": "image_5",
        "label": "Image 5"
      }
    ],
    "presets": [
      {
        "name": "Slideshow",
        "category": "Image"
      }
    ]
  }
{% endschema %}
